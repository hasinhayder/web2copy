{% extends "base.html.twig" %}
{% block body %}
    <div class="teaser">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="teasertext">
                        <h1>
                            Find a place inside where there's joy, and the joy will burn out the pain<br/>
                            <em>--Joseph Campbell</em>
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="features aboutus">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="feature">

                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="feature">
                        <h2><i class="fa title fa-envelope-o"></i> Contact Us</h2>
                        <div class="alert alert-success success" >Thank you for taking your time to contact us! We will get back to you as soon as possible.</div>
                        <p>
                            Need to tell us something? Use the form below :)
                        </p>

                        <form action="" method="POST" id="contact">
                            <div class="alert alert-danger err" >You should be ashamed if you are claiming to be a human after this! :P</div>
                            <div class="form-group">
                                <label for="sum">Robot? errrr!!! {{ v1 }} + {{ v2 }}=?</label>
                                <input type="text" class="form-control" style="width:400px" id="sum"
                                       placeholder="sum" name="sum" value="">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" style="width:400px" id="email"
                                       placeholder="email" name="email" value="">
                            </div>
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" style="width:400px" value="" class="form-control" id="name" name="name"
                                       placeholder="name">
                            </div>
                            <div class="form-group">
                                <label for="message">Message</label><br/>
                                <textarea class="form-control" rows="5" cols="60" id="message" name="message" placeholder="message"></textarea>
                            </div>
                            <input type="hidden" name="action" id="action" value="{{ chk }}"/>
                            <div class="alert alert-danger err" >You should be ashamed if you are claiming to be a human after this! :P</div>
                            <button id="submit" type="submit" class="btn btn-warning">Send</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block customjs %}
    {{ parent() }}
    <script type="text/javascript">
        var showModal = "{{ sm }}";
        ;(function($){
            $(document).ready(function(){
                $(".err").hide();
                $("#contact").on("submit",function(){
                    var sum = $("#sum").val();
                    var chk = $("#action").val()/34;
                    if(sum==chk){
                        return true
                    }else{
                        $(".err").show();
                        return false
                    }
                });

                if(showModal=='1'){
                    $(".success").show();
                }
            });
        })(jQuery);
    </script>
{% endblock %}